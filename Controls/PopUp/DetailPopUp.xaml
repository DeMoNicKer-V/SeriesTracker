<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="SeriesTracker.Controls.PopUp.DetailPopUp"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <Border>
        <HorizontalStackLayout BackgroundColor="Transparent">
            <Entry x:Name="myEntry" Text="This is a very important message! Do you agree?" Completed="myEntry_Completed"/>
            <Button Clicked="OnNoButtonClicked" Text="No" />
        </HorizontalStackLayout>
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="5" />
        </Border.StrokeShape>
    </Border>
</toolkit:Popup>