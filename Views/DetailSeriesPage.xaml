<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SeriesTracker.Views.DetailSeriesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:BlurBehavior="clr-namespace:SeriesTracker.Behaviors"
    xmlns:cProgressBar="clr-namespace:SeriesTracker.Controls.CircularProgressBar"
    xmlns:controls="clr-namespace:SeriesTracker.Controls"
    xmlns:local="clr-namespace:SeriesTracker.Controls.BottomSheet"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title=""
    BackgroundColor="{AppThemeBinding Light=#ffffff,
                                      Dark=#121212}"
    Shell.BackgroundColor="{AppThemeBinding Light={StaticResource Primary},
                                            Dark=#121212}"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="False">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" IsVisible="False" />
    </Shell.BackButtonBehavior>
    <ScrollView x:Name="baseContainer" VerticalScrollBarVisibility="Never">
        <VerticalStackLayout>
            <Grid x:Name="gridContainer">
                <Grid.RowDefinitions>
                    <RowDefinition Height="370" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="280" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Aspect="Fill"
                    Source="{Binding Series.imagePath}">
                    <Image.Behaviors>
                        <BlurBehavior:BlurBehavior Radius="65" />
                    </Image.Behaviors>
                    <Image.Shadow>
                        <Shadow
                            Brush="WhiteSmoke"
                            Opacity="0.5"
                            Radius="15"
                            Offset="0,0" />
                    </Image.Shadow>
                </Image>
                <ImageButton
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10,20,0,0"
                    Padding="2"
                    Command="{Binding BackCommand}"
                    HeightRequest="30"
                    HorizontalOptions="Start"
                    Source="backarrow.png"
                    VerticalOptions="Start"
                    WidthRequest="30">
                    <ImageButton.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="Black" />
                    </ImageButton.Behaviors>
                </ImageButton>
                <Border
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="15"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Fill"
                    Stroke="transparent"
                    VerticalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <Image Aspect="Fill" Source="{Binding Series.imagePath}" />
                </Border>
                <ImageButton
                    x:Name="menuLabel"
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="10,20,0,0"
                    Padding="2"
                    Clicked="OpenButton_Clicked"
                    HeightRequest="30"
                    HorizontalOptions="Start"
                    Rotation="90"
                    Source="dots.png"
                    VerticalOptions="Start"
                    WidthRequest="30">
                    <ImageButton.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="Black" />
                    </ImageButton.Behaviors>
                </ImageButton>


                <VerticalStackLayout
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    Margin="10,-5,10,0"
                    HorizontalOptions="Center"
                    VerticalOptions="StartAndExpand">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="NunitoRegular"
                        FontSize="22"
                        HorizontalTextAlignment="Center"
                        Text="{Binding Series.seriesName}"
                        TextColor="{AppThemeBinding Light={StaticResource Primary},
                                                    Dark={StaticResource PrimaryDark}}" />
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label
                            FontFamily="NunitoItalic"
                            FontSize="14"
                            Text="{Binding Series.GetSubDescription}" />
                        <ImageButton
                            x:Name="ratingButton"
                            Margin="3,-1,0,0"
                            Clicked="ratingButton_Clicked"
                            HeightRequest="18"
                            Source="ratestar.png"
                            VerticalOptions="Center"
                            WidthRequest="18">
                            <ImageButton.Behaviors>
                                <toolkit:IconTintColorBehavior x:Name="ratingTintColor" TintColor="LightGrey" />
                            </ImageButton.Behaviors>
                        </ImageButton>
                        <Label
                            x:Name="myLabel2"
                            Margin="2,-5,0,0"
                            FontFamily="NunitoItalic"
                            FontSize="10"
                            Text="?" />
                    </HorizontalStackLayout>
                    <toolkit:Expander x:Name="ratingExpander">
                        <VerticalStackLayout>

                            <Grid Margin="5" Padding="5">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="25" />
                                </Grid.ColumnDefinitions>
                                <HorizontalStackLayout
                                    Grid.Row="0"
                                    Grid.ColumnSpan="3"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center">
                                    <controls:RatingView
                                        ItemCount="10"
                                        ItemSize="20"
                                        ItemSpacing="6"
                                        RatedFillColor="Yellow"
                                        StrokeColor="Black"
                                        StrokeWidth="1"
                                        UnRatedFillColor="LightGrey">
                                        <controls:RatingView.Value>
                                            <Binding Path="Value" Source="{x:Reference mySlider}" />
                                        </controls:RatingView.Value>
                                    </controls:RatingView>
                                    <Label
                                        x:Name="myLabel"
                                        Margin="0,-5,0,0"
                                        FontFamily="NunitoItalic"
                                        FontSize="10">
                                        <Label.Text>
                                            <Binding Path="Value" Source="{x:Reference mySlider}" />
                                        </Label.Text>
                                    </Label>
                                </HorizontalStackLayout>
                                <ImageButton
                                    x:Name="cancelButton"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="3,-1,0,0"
                                    Clicked="cancelButton_Clicked"
                                    HeightRequest="18"
                                    HorizontalOptions="Center"
                                    Source="cross.png"
                                    VerticalOptions="Center"
                                    WidthRequest="18">
                                    <ImageButton.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="Red" />
                                    </ImageButton.Behaviors>
                                </ImageButton>

                                <Slider
                                    x:Name="mySlider"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    HorizontalOptions="Fill"
                                    Maximum="10.0"
                                    Minimum="0.0"
                                    ValueChanged="Slider_ValueChanged" />

                                <ImageButton
                                    x:Name="likeButton"
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="3,-1,0,0"
                                    Clicked="likeButton_Clicked"
                                    HeightRequest="18"
                                    HorizontalOptions="Center"
                                    Source="favorite.png"
                                    VerticalOptions="Center"
                                    WidthRequest="18">
                                    <ImageButton.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="Pink" />
                                    </ImageButton.Behaviors>
                                </ImageButton>
                            </Grid>
                        </VerticalStackLayout>
                    </toolkit:Expander>
                    <StackLayout Margin="5">
                        <Line
                            HorizontalOptions="Fill"
                            Stroke="{AppThemeBinding Light={StaticResource Primary},
                                                     Dark={StaticResource PrimaryDark}}"
                            StrokeThickness="1.2"
                            X2="350" />
                    </StackLayout>
                </VerticalStackLayout>

                <Grid
                    Grid.Row="2"
                    Grid.ColumnSpan="3"
                    Margin="10,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <HorizontalStackLayout
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalOptions="FillAndExpand">
                        <Border
                            BackgroundColor="Transparent"
                            Stroke="{StaticResource Gray300}"
                            StrokeThickness="1">
                            <HorizontalStackLayout Padding="5" HorizontalOptions="Start">
                                <Label Text="Избранное" VerticalTextAlignment="Center" />
                                <Image
                                    HeightRequest="15"
                                    Source="bookmark.png"
                                    WidthRequest="15" />
                            </HorizontalStackLayout>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5" />
                            </Border.StrokeShape>
                        </Border>
                        <Border
                            BackgroundColor="Transparent"
                            Stroke="{StaticResource Gray300}"
                            StrokeThickness="1.2">
                            <HorizontalStackLayout Padding="5" HorizontalOptions="Start">
                                <Label Text="Просмотрено: " VerticalTextAlignment="Center" />
                                <Label Text="{Binding Series.getFomattedEpisodes}" VerticalTextAlignment="Center" />
                            </HorizontalStackLayout>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5" />
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped" />
                            </Border.GestureRecognizers>
                        </Border>

                        <Border
                            x:Name="editEpisodeEntry"
                            BackgroundColor="Transparent"
                            IsVisible="false"
                            Stroke="{StaticResource Gray300}"
                            StrokeThickness="1.2">
                            <Entry
                                x:Name="episodeEntry"
                                Completed="episodeEntry_Completed"
                                HorizontalTextAlignment="Center"
                                Keyboard="Numeric"
                                MaxLength="4"
                                VerticalOptions="Center"
                                VerticalTextAlignment="Center" />
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5" />
                            </Border.StrokeShape>
                        </Border>
                    </HorizontalStackLayout>
                    <Image
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,5,0"
                        HeightRequest="25"
                        HorizontalOptions="Center"
                        Source="episode.png"
                        WidthRequest="25">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                        </Image.Behaviors>
                    </Image>
                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalOptions="Start"
                        Text="25 эп. по ~24 мин."
                        VerticalTextAlignment="Center" />
                    <Image
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,0,5,0"
                        HeightRequest="23"
                        HorizontalOptions="Center"
                        Source="calendar.png"
                        WidthRequest="23">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                        </Image.Behaviors>
                    </Image>
                    <Label
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalOptions="Start"
                        Text="12 сентрября, 2018 год"
                        VerticalTextAlignment="Center" />
                    <Image
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="0,0,5,0"
                        HeightRequest="23"
                        HorizontalOptions="Center"
                        Source="endcalendar.png"
                        WidthRequest="23">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                        </Image.Behaviors>
                    </Image>
                    <Label
                        Grid.Row="3"
                        Grid.Column="1"
                        HorizontalOptions="Start"
                        Text="Не просмотрено"
                        VerticalTextAlignment="Center" />
                </Grid>

                <toolkit:Expander
                    x:Name="descriptionExpander"
                    Grid.Row="3"
                    Grid.ColumnSpan="3"
                    Margin="0,-15,0,0"
                    Padding="10,0,10,10"
                    ExpandedChanged="Expander_ExpandedChanged"
                    VerticalOptions="CenterAndExpand">
                    <toolkit:Expander.Header>
                        <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                            <Label
                                x:Name="descriptionCaption"
                                FontAttributes="Italic"
                                FontFamily="NunitoItalic"
                                FontSize="14"
                                Text="Открыть описание" />
                            <Image
                                x:Name="descriptionImage"
                                HeightRequest="20"
                                Source="downarrow.png"
                                WidthRequest="20">
                                <Image.Behaviors>
                                    <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                </Image.Behaviors>
                            </Image>
                        </HorizontalStackLayout>
                    </toolkit:Expander.Header>
                    <Label
                        x:Name="descriptionText"
                        FontAutoScalingEnabled="True"
                        FontSize="Body"
                        HorizontalOptions="CenterAndExpand"
                        Text="{Binding Series.seriesDescription}"
                        VerticalOptions="FillAndExpand" />
                </toolkit:Expander>


                <local:BottomSheet
                    x:Name="BottomSheet"
                    Title="Example BottomSheet"
                    Grid.Row="4"
                    Grid.ColumnSpan="3"
                    CloseCommand="{Binding CloseCommand}"
                    DeleteCommand="{Binding DeleteCommand}"
                    DetachCommand="{Binding DetachCommand}"
                    EditCommand="{Binding EditCommand}"
                    IsVisible="false"
                    VerticalOptions="EndAndExpand" />

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>